{
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "[python]": {
        "editor.defaultFormatter": "eeyore.yapf",
        "editor.formatOnSave": true,
    },
    "pylint.enabled": true,
    "pylint.args": [
        "--max-line-length=230", // Match your preferred 230 characters
        "--disable=C0114", // Missing module docstring
        "--disable=C0301", // Line too long (handled by max-line-length)
        "--disable=W0703", // Catching too general exception Exception
        "--disable=W0707", // Consider explicitly re-raising using
        "--disable=W0621", // Redefining name 'fetcher'
        "--disable=C0411", // Wrong import order
        "--disable=C0200", // Consider using enumerate
        "--disable=R1705" // Consider using raise ... from ...
    ],
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode" // Use Prettier for JSON
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "yapf.args": [
        "--style={based_on_style: google, column_limit: 230, split_penalty_multiplier: 0}"
    ]
}
